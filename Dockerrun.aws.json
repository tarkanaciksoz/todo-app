{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "frontend",
            "ContainerName": "todo-app-frontend",
            "image": "tarkanaciksoz/todo-app-frontend:latest",
            "essential": false,
            "hostname": "frontend",
            "environment": [
                {
                    "name": "ENV",
                    "value": "prod"
                },
                {
                    "name": "Container",
                    "value": "frontend"
                }
            ],
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "memory": 128,
            "links": [
                "backend"
            ],
            "volumesFrom": [
                {
                  "sourceContainer": "backend"
                }
            ]
        },
        {
            "name": "backend",
            "ContainerName": "todo-app-backend",
            "image": "tarkanaciksoz/todo-app-backend:latest",
            "essential": false,
            "hostname": "backend",
            "environment": [
                {
                    "name": "ENV",
                    "value": "prod"
                },
                {
                    "name": "Container",
                    "value": "backend"
                }
            ],
            "portMappings": [
                {
                    "containerPort": 9090,
                    "hostPort": 9090
                }
            ],
            "memory": 128
        },
        {
            "name": "mysql",
            "ContainerName": "todo-app-mysql",
            "image": "mysql:latest",
            "essential": true,
            "hostname": "mysql",
            "environment": [
                {
                    "name": "Container",
                    "value": "backend"
                },
                {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "value": "todo-app"
                },
                {
                    "name": "MYSQL_DATABASE",
                    "value": "todo-app"
                },
                {
                    "name": "MYSQL_PASSWORD",
                    "value": "todo-app"
                }
            ],
            "portMappings": [
                {
                    "containerPort": 3306,
                    "hostPort": 3306
                }
            ],
            "memory": 128
        }
    ]
}