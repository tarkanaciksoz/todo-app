{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "frontend",
            "ContainerName": "todo-app-frontend",
            "image": "tarkanaciksoz/todo-app-frontend:latest",
            "essential": false,
            "environment": [
                {
                    "name": "ENV",
                    "value": "prod"
                },
                {
                    "name": "Container",
                    "value": "frontend"
                }
            ],
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "memory": 128,
            "links": [
                "backend"
            ],
            "volumesFrom": [
                {
                  "sourceContainer": "backend"
                }
            ]
        },
        {
            "name": "backend",
            "ContainerName": "todo-app-backend",
            "image": "tarkanaciksoz/todo-app-backend:latest",
            "essential": true,
            "environment": [
                {
                    "name": "ENV",
                    "value": "prod"
                },
                {
                    "name": "Container",
                    "value": "backend"
                }
            ],
            "portMappings": [
                {
                    "containerPort": 9090,
                    "hostPort": 9090
                }
            ],
            "memory": 128
        }
    ]
}